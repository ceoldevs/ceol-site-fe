---
export interface Props {
	title: string;
	description: string;
	href: string;
  type: string;
  image: string;
}

const { href, title, description, type, image } = Astro.props as Props;
---

<div class="group bg-blue-900/10 rounded-[3rem] my-4">
  <div class="flex pt-6 pb-2 mr-10 group-hover:text-blue-600">
    <div class="flex-1"></div>
    {type}
    <span class="material-symbols-rounded">
      north_east
    </span>
  </div>
  <h2 class="text-3xl font-medium mx-10 mt-4 mb-6 font-poppins group-hover:underline group-hover:decoration-2 group-hover:text-blue-600">
    <a href={href}>
      {title}
    </a>
  </h2>
  <div class="px-10">{description}</div>
  <img src={image} alt={title.slice(0, 10)} class="w-full mt-8 rounded-[3rem] h-64 object-cover">
</div>